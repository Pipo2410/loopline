generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Channel {
  id          String   @id @default(uuid())
  
  name        String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspaceId String
  createdById String

  message Message[]

  @@unique([workspaceId, name])
}


model Message {
  id String @id @default(uuid())

  content String
  imageUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId String
  authorEmail String
  authorName String
  authorAvatar String
  Channel Channel? @relation(fields: [channelId], references: [id])
  channelId String?
}